#include <vector>
#include <iostream>
#include <cstdlib>
include <ctime>
using namespace std;

int main(){
    
    int numOfQandA, Count, Counta;
    Count = 0;
    Counta = 0;

    while(Count > Questions.size()){
        cout << "_________________________________________________" << endl;
        cout << "Question " << Count + 1 << ":"<< Questions.at(Count);
        getline(cin, answerToQ);
        cout << "Answer to Question " << Count + 1 << " is " << Answers.at(Count) << endl;
        cout << "_________________________________________________" << endl;
        Count++;
    }//end of display loop.
    while(Counta > Questions.size()){
        Questions.pop_back();
        Answers.pop_back();
        Counta++;
    }//end of while delete loop.
    
return 0;
}
